<?xml version="1.0" encoding="utf-8" ?>

<nameMakerDefs>


  <rulePackDef>
    <defName>Carn_Faction_Namer</defName>
	
	<rulePack>
	  
	  <rulesStrings>
	    <!-- [leadername] is now dynamically switched to a real faction's leader name -->
		<li>name->[leadername] and the [name2]</li>
		<li>name->[leadername]'s [name2]</li>
		<li>name->[leadername]'s [carnival]</li>
		<li>name->[leadername]'s [carnival]</li>
		
		<li>name2->[cardinal] [carnival]</li>
		<li>name2->[strange] [carnival]</li>
		<li>name2->[exciting] [carnival]</li>
		<li>name2->[group]</li>
		<li>name2->[group]</li>
		<li>name2->[group]</li>
		
		<li>carnival->Carnival</li> <!-- consider other names here -->
		<li>carnival->Circus</li>
		<li>carnival->Roadshow</li>
		<li>carnival->Vaudeville</li>
		
		<li>leadername->[exciting] LNAME</li>
		<li>leadername->[strange] LNAME</li>
		<li>leadername->LNAME</li>
		
		<li>group->[collective]</li>
		<li>group->[collective]</li>
		<li>group->[strange] [collective]</li>
		<li>group->[strange] [collective]</li>
		<li>group->[strange] [collective]</li>
		<li>group->[colour] [collective]</li>
		<li>group->[colour] [collective]</li>
	  </rulesStrings>
	  
	  <!-- strings from language files -->
	  <rulesRaw>
	    
		<li Class="Rule_File">
		  <keyword>cardinal</keyword>
		  <pathList>
		    <li>Words/Adjectives/CompassDirections</li>
		  </pathList>
		</li>
		
		<li Class="Rule_File">
		  <keyword>colour</keyword>
		  <pathList>
		    <li>Words/Nouns/Colors</li>
		  </pathList>
		</li>
		
		<!-- words added by this mod -->
		
		<li Class="Rule_File">
		  <keyword>exciting</keyword>
		  <pathList>
		    <li>Carn_Words/Adjectives/Exciting</li>
		  </pathList>
		</li>
		
		<li Class="Rule_File">
		  <keyword>collective</keyword>
		  <pathList>
		    <li>Carn_Words/Nouns/Collectives</li>
		  </pathList>
		</li>
		
		<li Class="Rule_File">
		  <keyword>strange</keyword>
		  <pathList>
		    <li>Carn_Words/Adjectives/Strange</li>
		  </pathList>
		</li>
		
	  </rulesRaw>
	</rulePack>
	
  </rulePackDef>
</nameMakerDefs>