<?xml version="1.0" encoding="utf-8"?>
<TraderKindDefs>
  
  <!-- food vendor -->
  <TraderKindDef>
    <defName>Carn_Trader_Food</defName>
	<label>food vendor</label>
	
	<commonality>5</commonality>
	
	<stockGenerators>
	  
	  <li Class="StockGenerator_SingleDef">
        <thingDef>Silver</thingDef>
        <countRange>
          <min>100</min>
          <max>300</max>
        </countRange>
      </li>
	  
	  <li Class="StockGenerator_Category">
        <categoryDef>FoodRaw</categoryDef>
		<excludedCategories>
		  <li>EggsFertilized</li>
		</excludedCategories>
        <thingDefCountRange>
          <min>6</min>
          <max>12</max>
        </thingDefCountRange>
        <totalPriceRange>
          <min>300</min>
          <max>1200</max>
        </totalPriceRange>
      </li>
	  
	  <li Class="StockGenerator_Category">
	    <categoryDef>FoodMeals</categoryDef>
		<thingDefCountRange>
		  <min>3</min>
		  <max>4</max>
		</thingDefCountRange>
		<countRange>
		  <min>6</min>
		  <max>24</max>
		</countRange>
	  </li>
	  
	  <li Class="StockGenerator_SingleDef">
		<thingDef>Beer</thingDef>
		<countRange>
		  <min>64</min>
		  <max>128</max>
		</countRange>
	  </li>
	  
	  <li Class="StockGenerator_BuyWeirdOrganic" />
	  
	</stockGenerators>
  </TraderKindDef>
  
  
