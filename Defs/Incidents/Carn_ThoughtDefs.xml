<?xml version="1.0" encoding="utf-8" ?>
<ThoughtDefs>
  
  <ThoughtDef>
    <defName>Thought_CarnivalInTown</defName>
	<thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>Carnivale.ThoughtWorker_CarnivalInTown</workerClass>
	
	<nullifiedIfNotColonist>false</nullifiedIfNotColonist> <!-- manual decision so visitors benefit as well -->
	
    <stages>
      
	  <li>
        <label>Carnival in town!</label>
        <description>The Carnival brings new hope that there is more to life than the daily grind.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
	  
	  <li>
	    <label>Carnival in town?</label>
		<description>I don't really get what the fuss is about.</description>
		<baseMoodEffect>1</baseMoodEffect>
	  </li>
	  
    </stages>
  </ThoughtDef>
  
  
  <ThoughtDef>
    <defName>Thought_AttendedShow</defName>
	<thoughtClass>Thought_Memory</thoughtClass>
	<durationDays>10</durationDays>
	<stackLimit>10</stackLimit>
	<nextThought>Thought_MissCarnival</nextThought>
	
	<stages>
	  <li>
	    <label>saw a carnival show</label>
		<description>I had no idea people could move that way!</description>
		<baseMoodEffect>2</baseMoodEffect>
	  </li>
	</stages>
	
  </ThoughtDef>
  
  
  <ThoughtDef>
    <defName>Thought_MissCarnival</defName>
	<thoughtClass>Thought_Memory</thoughtClass>
	<durationDays>5</durationDays>
	
	<stages>
	  <li>
	    <label>longing for carnival</label>
		<description>I miss the carnival.</description>
		<baseMoodEffect>-3</baseMoodEffect>
	  </li>
	</stages>
	
  </ThoughtDef>
  
</ThoughtDefs>