<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!-- BASES -->
  
  <!-- Trade goods base -->
  <ThingDef Name="CrateBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>1</stackLimit>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
    <intricate>true</intricate>	
    <tickerType>Never</tickerType>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tradeability>Sellable</tradeability>	
    	
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>	
	
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>

	<tradeTags>
	  <li>Carn_Crate</li>
	</tradeTags>
	
  </ThingDef>
  
  <!-- Tent Crate Base -->
  <ThingDef Name="TentCrateBase" ParentName="CrateBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>	  
      
	  <recipeUsers>
	    <li>ElectricTailoringBench</li>
	  </recipeUsers>
    </recipeMaker>	
	
	<stuffProps>
	  <categories>
	    <li>StuffedCrate</li>
	  </categories>
	</stuffProps>
	  
  </ThingDef>
  
  <!-- END BASES -->
  
  
  <!-- Tent Crate: lodge tent -->
  <ThingDef ParentName="TentCrateBase" Name="TentCrateLodge">
    <defName>Carn_Crate_TentLodge</defName>
	<label>crate, lodging tent</label>
	<description>A crate filled with enough stakes, textile, rods, etcetera to construct a lodging tent.</description>
	<graphicData>
	  <texPath>Carnivale/Items/TentCrate</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <drawSize>(0.8,0.8)</drawSize>
	</graphicData>
	
	<stuffCategories>
	  <li>Fabric</li>
	</stuffCategories>
	
	<costStuffCount>400</costStuffCount>
	<costList>
	  <WoodLog>50</WoodLog>
	  <Plasteel>5</Plasteel>
	</costList>
	
	<statBases>
	  <MaxHitPoints>250</MaxHitPoints>
	  <Flammability>1.5</Flammability>
	  <WorkToMake>8000</WorkToMake>
	  <Mass>10</Mass>
	  <MarketValue>800</MarketValue>
	</statBases>
	
  </ThingDef>
  
  
  <!-- Tent crate: manager -->
  <ThingDef ParentName="TentCrateLodge">
    <defName>Carn_Crate_TentMan</defName>
	<label>crate, management tent</label>
	<description>A crate filled with enough stakes, textile, rods, etcetera to construct the manager's tent.</description>
    
	<costStuffCount>275</costStuffCount>
	<costList>
	  <WoodLog>35</WoodLog>
	  <Plasteel>5</Plasteel>
	</costList>
	
  </ThingDef>
  
  
</Defs>