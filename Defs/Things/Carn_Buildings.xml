<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
  
  <!-- Buildings base -->
  <ThingDef Name="CarnBuilding" Abstract="True">
    <category>Building</category>
	<thingClass>Building</thingClass>
	<soundImpactDefault>BulletImpactWood</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>
  
  
  
  <!-- Tent small -->
  <ThingDef ParentName="CarnBuilding" Name="TentSmall">
    <defName>Carn_TentSmall</defName>
	<thingClass>Carnivale.Building_Tent</thingClass>
	<label>carnival tent (small)</label>
	<description>A small carnival tent.</description>
	
	<graphicData>
	  <texPath>Carnivale/Building/Tent</texPath>
	  <graphicClass>Graphic_Multi</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <drawSize>(5.15,5.15)</drawSize>
	  <allowFlip>false</allowFlip> <!-- This doesn't seem to have effect? -->
	  
	  <shadowData>
        <volume>(0.25, 0.5, 0.25)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
	  
	  <damageData>
	    <rect>(0.1,0.1,4.9,4.9)</rect>
	  </damageData>
	</graphicData>
	
	<size>(5,5)</size>
	<altitudeLayer>PawnUnused</altitudeLayer>
	<pathCost>0</pathCost>
	<passability>Standable</passability>
	
	<rotatable>true</rotatable>
	<hasInteractionCell>true</hasInteractionCell>
	<interactionCellOffset>(0,0,-3)</interactionCellOffset>
	
	<blockWind>true</blockWind>
	<holdsRoof>true</holdsRoof>
	
	<stuffCategories>
	  <li>Fabric</li>
	  <li>Leathery</li>
	</stuffCategories>
	<costStuffCount>150</costStuffCount>
	<costList>
	  <WoodLog>25</WoodLog>
	</costList>
	
	<statBases>
	  <MaxHitPoints>150</MaxHitPoints>
	  <Flammability>1.5</Flammability>
	  <WorkToBuild>2000</WorkToBuild>
	  <Mass>100</Mass>
	  <Beauty>6</Beauty>
	</statBases>
	
	<damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
	
	<building>
	  <ignoreNeedsPower>true</ignoreNeedsPower>
	</building>
	
	<placeWorkers>
	  <li>Carnivale.PlaceWorker_Tent</li>
	</placeWorkers>
	
	<designationCategory>Misc</designationCategory>
	
  </ThingDef>
  
  
</ThingDefs>