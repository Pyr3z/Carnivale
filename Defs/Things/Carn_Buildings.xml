	  <Beauty>50</Beauty>
	</statBases>
	
	<comps>
	  <li Class="Carnivale.CompProperties_CarnBuilding">
	    <type>5</type> <!-- Tent | Bedroom == 5 -->
		<interiorThings>
		  <li>
		    <thingDef>SleepingSpot</thingDef>
			<placementOffsets>
			  <li>(-2,0,2)</li>
		      <li>(-1,0,2)</li>
		      <li>(1,0,2)</li>
		      <li>(2,0,2)</li>
		      <li>(-2,0,-1)</li>
		      <li>(-1,0,-1)</li>
		      <li>(1,0,-1)</li>
		      <li>(2,0,-1)</li>
			</placementOffsets>
		  </li>
		  <li>
		    <thingDef>TorchLamp</thingDef>
			<placementOffsets>
			  <li>(0,0,0)</li>
			</placementOffsets>
		  </li>
		</interiorThings>
	  </li>
	</comps>
	
  </ThingDef>
  
  
